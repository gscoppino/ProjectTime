    "version": "0.2.0",
    "configurations": [
        {
            "name": "ProjectTime (Debug)",
            "type": "python",
            "pythonPath": "${workspaceFolder}/envs/application-debug/bin/python",
            "pythonArgs": ["-Wa"],
            "request": "launch",
            "program": "${workspaceFolder}/src/ProjectTime/manage.py",
            "args": [
                "runserver",
                "--noreload"
            ],
            "django": true,
            "env": {
                "DJANGO_SETTINGS_MODULE": "ProjectTime.config.settings-debug"
            },
            "preLaunchTask": "Prepare Debug Environment"
        }
    ]
}
